<Page x:Class="wpfCalendar.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpfCalendar"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="200"
      Title="StartPage">

    <Grid>
        <Rectangle x:Name="rectBackground" RadiusX="20" RadiusY="20">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF0D0E4A" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Center" Margin="52,88,46,88" VerticalAlignment="Center" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <TextBlock HorizontalAlignment="Left" Margin="14,43,0,0" TextWrapping="Wrap" Text="Please Select A Date To Begin" VerticalAlignment="Top" Foreground="White" FontFamily="MV Boli" TextAlignment="Center"/>
        <Button x:Name="btnConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="63,135,0,0" VerticalAlignment="Top" Width="75" Click="btnConfirm_Click"/>
    </Grid>
</Page>
